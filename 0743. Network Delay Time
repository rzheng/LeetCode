class Solution {

	public int networkDelayTime(int[][] times, int N, int K) {
		return Math.max(0, Arrays.stream(IntStream.range(1, N).boxed().reduce(IntStream.range(0, N + 1).map(o -> o == 0 || o == K ? 0 : 2147483647).toArray(), (t, u) -> Arrays.stream(times).reduce(0, (v, w) -> t[w[1]] = Math.min(t[w[1]], t[w[0]] < 99 ? t[w[0]] + w[2] : 2147483647), (v, w) -> v) > 0 ? t : t, (t, u) -> t)).max().orElse(0) + 1) - 1;
	}
}
